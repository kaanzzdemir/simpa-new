@model SimPlastik.Models.ViewModels.LayoutViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-12 px-0">
            <div class="page__top about">
                <h1>@_localization.Getkey("text-institutional")</h1>
                <h2><a href="/Home">@_localization.Getkey("text-home")</a> > @_localization.Getkey("text-institutional")</h2>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row my-5 about__page">
        @*<div class="col-xl-3">
                <ul class="about__page--list">
                    <a href="#">
                    <li>@_localization.Getkey("text-institutional")</li>
                    </a>
                    <a href="#">
                    <li>@_localization.Getkey("sidebar-vision-mission")</li>
                    </a>
                    <a href="#">
                    <li>@_localization.Getkey("sidebar-policy")</li>
                    </a>
                </ul>
            </div>*@
        <div class="col-xl-12">
            <div class="about__page--content">
                @foreach (var item in Model.Abouts)
                {
                    <h1 class="h1 main-heading" style=" font-size: 30px !important; padding-left: 0 !important;">
                        @_localization.Getkey("text-about-simpa")
                    </h1>
                    <p>
                        @if (ViewBag.Language == "tr-TR")
                        {
                            @item.about_text
                        }
                        else if (ViewBag.Language == "en-US")
                        {
                            @item.about_eng_text
                        }
                        else
                        {
                            @item.about_ar_text
                        }
                    </p>
                }
            </div>
        </div>
    </div>
</div>
